{
	"manifest_version": 2,

	"name": "Play/Pause youtube videos",
	"description": "This extension searches through tabs if a youtube video is being played, then plays/pauses it.",
	"version": "1.1",
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"tabs",
		"background",
		"https://www.youtube.com/"
	],

	"commands": {
		"play_previous": {
			"suggested_key": {
				"default": "Ctrl+Shift+1",
				"linux": "Ctrl+Shift+1",
				"mac": "Command+Shift+1"
			},
			"description": "Play previous",
			"global": true
		},

		"play_pause": { 	
		    "suggested_key": {
		      "default": "Ctrl+Shift+2",
		      "mac": "Command+Shift+2",
		      "linux": "Ctrl+Shift+2"
		    },
		    "description": "Play/pause",
		    "global": true
		 },

		"play_next": {
			"suggested_key": {
				"default": "Ctrl+Shift+3",
				"linux": "Ctrl+Shift+3",
				"mac": "Command+Shift+3"
			},
			"description": "Play Next",
			"global": true
		},

		"_execute_browser_action": {
			"suggested_key": {
				"windows": "Alt+Y",
				"linux": "Alt+Y",
				"mac": "Alt+Y"
			},
			"description": "Play/pause"
		}
	    
	},
	
	"background": {
    "scripts": ["js/background.js"]
  }
}